# Replaces .bash_profile in the zsh shell

# TMUX
if [[ -z "$TMUX" ]] ;then
    ID="$( tmux ls | grep -vm1 attached | cut -d: -f1 )" # get the id of a deattached session
    if [[ -z "$ID" ]] ;then # if not available create a new one
        tmux new-session
    else
        tmux attach-session -t "$ID" # if available attach to it
    fi
fi

# Load the shell dotfiles:
# * ~/.path can be used to extend `$PATH`.
# Load AWS credentials from .aws/env for use with https://github.com/mesosphere/aws-cli
for file in ~/.{bash_completion,path,exports,functions,aliases,aws/env}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file"
done
unset file

ulimit -n 1024

# SSH agent
SSH_ENV="$HOME/.ssh/environment"

function start_agent {
    echo "Initialising new SSH agent..."
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    /usr/bin/ssh-add;
    if [ -f ~/.ssh/puppet ]; then
      /usr/bin/ssh-add ~/.ssh/puppet
    fi
}

# Source SSH settings, if applicable
if [ -f "${SSH_ENV}" ]; then
    . "${SSH_ENV}" > /dev/null
    ps ${SSH_AGENT_PID} > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi

# Load rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
if [ -d "$HOME/.rbenv/bin" ]; then
    eval "$(rbenv init -)"
fi

# Load homebrew
if [ -e /home/linuxbrew/.linuxbrew/bin/brew ]; then
  eval $(/home/linuxbrew/.linuxbrew/bin/brew shellenv)
fi

# Remove duplicate ZSH history
# http://leetschau.github.io/remove-duplicate-zsh-history.html
setopt EXTENDED_HISTORY
setopt HIST_EXPIRE_DUPS_FIRST
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_FIND_NO_DUPS
setopt HIST_SAVE_NO_DUPS
setopt HIST_BEEP

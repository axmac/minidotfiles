
alias ..="cd .."

alias c="clear"
alias e="exit"
alias h="history"
alias j="jobs"

alias less='less -r'                          # raw control characters
alias whence='type -a'                        # where, of a sort

# vim
alias v="vim"
alias vi="vim"
alias view="vim -R"

# git
alias g="git"
alias gl='git log --pretty=format:'\''%Cred%h %Cgreen%ad%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset'\'' --abbrev-commit --date=short'
alias gL='git log'
alias gg='git log --graph'
alias ga='git add'
alias gs='git status'
alias gss='git status --short'
alias gd='git diff'
alias gp='git pull'
alias gf='git fetch'
alias gA='git add --all :/'
alias gm='git commit'
alias gr='git rebase'
alias fixup='git add --all :/;git commit -m "WIP fixup"'
alias gt='git difftool --tool=vimdiff --no-prompt'

# bundler
alias be='bundle exec'
alias ber='bundle exec rake'

# ls
alias l='ls -lhF --color'
alias ls='ls -h --color'
alias ll='ls -lAhF --color'

# tmux
alias t='tmux'
alias tls='tmux ls'

# lsof
alias lsof='lsof -n -P'

# nmap
alias nmap='nmap -n -Pn'

# pstree
alias pstree='pstree -g 2'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ips="ifconfig -a | grep -o 'inet6\? \(\([0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+\)\|[a-fA-F0-9:]\+\)' | sed -e 's/inet6* //'"

# DNS
alias flushdns="dscacheutil -flushcache && killall -HUP mDNSResponder"

# Quick cd to Stash under Windows
alias cdwin="cd $WINDOWS_HOME/Documents/Stash"

# TERM sent to ssh
alias ssh='TERM=xterm ssh'

# grep
alias grep='grep --color=auto -I --exclude-dir=.git --exclude-dir=.svn --exclude-dir=.metadata --exclude=.tmp'

# docker
alias dp='docker ps -a'

# ps
alias psa='ps -a'

# diff
alias diff='diff --color'
